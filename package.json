  "bugs": "https://github.com/tmallet/LaMa/issues",
  "keywords": [
    "bootstrap grid builder",
    "bootstrap",
    "grid",
    "builder"
  ],
  "license": "Apache-2.0",
  "private": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "serve": "vue-cli-service serve",
